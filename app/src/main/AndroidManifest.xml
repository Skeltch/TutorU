<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group14.tutoru"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk android:minSdkVersion="8" />
    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="21" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <grant-uri-permission
        android:path="string"
        android:pathPattern="string"
        android:pathPrefix="string" />

    <application
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainScreenActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateUnchanged">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddUser"
            android:label="Add User"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateUnchanged">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="group14.tutoru.MainPage" />
        </activity>
        <activity android:name=".PostRegistrationActivity" />
        <activity android:name=".SignIn" />
        <activity
            android:name=".MainPage"
            android:label="@string/title_activity_main_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        -->
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="group14.tutoru.MainPage" />
        </activity>
        <activity
            android:name=".editProfile"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateUnchanged">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="group14.tutoru.Profile" />
        </activity>
        <activity
            android:name=".otherProfile"
            android:label="@string/title_activity_other_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".search"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateUnchanged" />
        <activity android:name=".test" />
        <activity
            android:name=".Review"
            android:label="@string/title_activity_review"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="group14.tutoru.MainPage" />
        </activity>
        <activity
            android:name=".changePassword"
            android:label="@string/title_activity_change_password"
            android:parentActivityName=".Profile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="group14.tutoru.Profile" />
        </activity>
        <activity
            android:name=".ListReviews"
            android:label="@string/title_activity_list_reviews"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="group14.tutoru.Profile" />
        </activity>
        <activity
            android:name=".tabbedProfile"
            android:label="@string/title_activity_tabbed_profile"
            android:parentActivityName=".MainPage"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="group14.tutoru.MainPage" />
        </activity>
        <activity android:name=".forgotPassword"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="group14.tutoru.MainScreenActivity" />
        </activity>
    </application>

</manifest>
